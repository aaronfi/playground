package MyKata;

// import java.util.List;

public class MergeSort {

    public static void _ms(Integer[] c, int l, int r) {
        if (l >= r) return;
        int m = (l+r)/2;
        _ms(c,l,m);
        _ms(c,m+1,r);
        int ai = l, bi = m+1;
        while (ai < m || bi <= r) {
            if (c[ai] <= c[bi]) {
                bi++;
            } else {
                int t = c[ai];
                c[ai] = c[bi];
                c[bi] = t;
                ai++;
            }
        }
    }
    
    public static void ms(Integer[] c) {
        _ms(c, 0, c.length-1);
    }
    
    public static void main(String[] args) {
        Integer[] c = { 5, 1, 3, 9, 0 };
        ms(c);
        System.out.println(c);
    }	
}
